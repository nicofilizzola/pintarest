{% extends 'layouts/base.html.twig' %}

{#{% block title %}Hello PinController!{% endblock %}#}

{% block body %}
    <div class="container">
        <article class="my-5">
            <h1>{{ pin.title }}</h1>
            <p>{{ pin.description }}</p>
        </article>
        <p>
            <a href="{{ path('app_pin_edit', {id: pin.id}) }}">Edit</a> | 
            <a href="#" onclick="event.preventDefault(); confirm('Are you sure about that?') && document.querySelector('#js-delete-pin').submit();">Delete</a>
        </p>
    </div>
    

    <form id="js-delete-pin" display="none" action="{{ path('app_pin_delete', {id: pin.id}) }}" method="post">
        <input type="hidden" name="_token" value="{{ csrf_token('app_pin_delete' ~ pin.id) }}">
        <input type="hidden" name="_method" value="DELETE">
    </form>
    
{% endblock %}