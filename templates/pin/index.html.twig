{% extends 'layouts/base.html.twig' %}

{#{% block title %}Hello PinController!{% endblock %}#}

{% block body %}
    <div class="container mt-5">
        {% if allPins|length > 0 %}
            <h1 class="text-muted text-center">{{ is_plural(allPins|length, 'Pin') }}</h1>
            <div class="mt-3">
            {% for row in allPins|batch(3) %}
                <div class="row">
                    {% for pin in row %}
                        <div class="col-md-4 mt-3">
                            <article class="rounded shadow pin bg-white">
                                <div class="mw-100 overflow-hidden rounded-top">
                                    <a href="{{ path('app_pin_show', {id: pin.id}) }}">
                                        <img class="w-100" src="{{ vich_uploader_asset(pin) | imagine_filter('square_thumbnail_md') }}" alt="{{ pin.title }}" />
                                    </a>
                                </div>
                                <div class="pl-3 py-1">
                                    <h2><a href="{{ path('app_pin_show', {id: pin.id}) }}" class="h5 text-secondary text-decoration-none">{{ pin.title }}</a></h2>
                                    <p><small class="text-muted">Submitted by [AUTHOR]</small></p>
                                </div>
                            </article>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
            </div>
        {% else %}
            <h1>No pins yet, <a href="{{ path('app_pin_create') }}">be the first</a></h1>
        {% endif %}
    </div>
{% endblock %}
